---
import Layout from '../layouts/Layout.astro';
import menuData from '../data/menu.json';
import eventsData from '../data/events.json';

const featuredDrinks = [
  { name: "Lavender Oat Latte", description: "House lavender syrup, oat milk, double espresso", price: "6.50", tag: "Fan Favorite" },
  { name: "Nitro Cold Brew", description: "18-hour steeped, cascading on tap", price: "6.00", tag: "Signature" },
  { name: "Honey Cardamom Latte", description: "Local honey, ground cardamom, steamed milk", price: "6.50", tag: "Seasonal" },
];

const upcomingEvents = eventsData.events.slice(0, 3);
---

<Layout title="Home" description="Groundwork Coffee Co. â€” Specialty coffee, baked goods, and community. Three locations across Salt Lake City, Utah.">

  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center overflow-hidden">
    <!-- Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-forest-900 via-forest-800 to-forest-950"></div>
    <div class="grain-overlay"></div>

    <!-- Decorative circles -->
    <div class="absolute top-20 right-10 w-64 h-64 rounded-full bg-forest-700/20 blur-3xl"></div>
    <div class="absolute bottom-20 left-10 w-96 h-96 rounded-full bg-forest-600/10 blur-3xl"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32 lg:py-0 w-full">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div class="animate-fade-up">
          <div class="ornament mb-6 justify-start">
            <span class="text-xs font-semibold tracking-[0.2em] uppercase text-forest-300">Salt Lake City</span>
          </div>
          <h1 class="font-display text-5xl sm:text-6xl lg:text-7xl text-cream-50 leading-[1.1] mb-6">
            Coffee with <br/>
            <span class="text-forest-300 italic">intention.</span>
          </h1>
          <p class="text-lg text-cream-300 leading-relaxed max-w-lg mb-8">
            Single origin beans, roasted in small batches. Three spots across SLC where good coffee meets good people.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href="/order" class="btn-primary px-8 py-3.5 rounded-full text-sm font-semibold text-white">
              Order Ahead
            </a>
            <a href="/menu" class="btn-outline px-8 py-3.5 rounded-full text-sm font-semibold text-cream-200 border border-cream-200/25 hover:border-cream-200/50 hover:bg-cream-200/5">
              View Menu
            </a>
          </div>

          <!-- Quick stats -->
          <div class="flex gap-8 mt-12 pt-8 border-t border-forest-700/50">
            <div>
              <p class="text-2xl font-bold text-forest-300">3</p>
              <p class="text-xs text-cream-500 uppercase tracking-wider">Locations</p>
            </div>
            <div>
              <p class="text-2xl font-bold text-forest-300">2019</p>
              <p class="text-xs text-cream-500 uppercase tracking-wider">Est.</p>
            </div>
            <div>
              <p class="text-2xl font-bold text-forest-300">12+</p>
              <p class="text-xs text-cream-500 uppercase tracking-wider">Origins</p>
            </div>
          </div>
        </div>

        <!-- Hero image placeholder -->
        <div class="animate-fade-in hidden lg:block" style="animation-delay: 0.3s">
          <div class="image-placeholder aspect-[4/5] rounded-2xl relative">
            <div class="absolute inset-0 flex flex-col items-center justify-center text-center p-8">
              <svg class="w-16 h-16 text-forest-500/40 mb-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M17 8h1a4 4 0 1 1 0 8h-1" />
                <path d="M3 8h14v9a4 4 0 0 1-4 4H7a4 4 0 0 1-4-4Z" />
                <line x1="6" y1="2" x2="6" y2="4" />
                <line x1="10" y1="2" x2="10" y2="4" />
                <line x1="14" y1="2" x2="14" y2="4" />
              </svg>
              <p class="text-forest-400/60 text-sm font-medium">Hero Image</p>
              <p class="text-forest-400/40 text-xs mt-1">Latte art / barista action shot</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 animate-fade-in" style="animation-delay: 1s">
      <span class="text-xs text-cream-500 uppercase tracking-widest">Scroll</span>
      <div class="w-px h-8 bg-gradient-to-b from-cream-500 to-transparent"></div>
    </div>
  </section>

  <!-- Featured Drinks -->
  <section class="py-20 lg:py-28 bg-cream-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-14 reveal">
        <div class="ornament mb-4">
          <span class="text-xs font-semibold tracking-[0.2em] uppercase text-forest-600">What's Pouring</span>
        </div>
        <h2 class="font-display text-3xl sm:text-4xl text-bark-900 mb-4">Staff picks & signatures</h2>
        <p class="text-bark-500 max-w-md mx-auto">The drinks our baristas can't stop making for themselves.</p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8 stagger-children">
        {featuredDrinks.map((drink) => (
          <div class="reveal card-hover bg-white rounded-2xl overflow-hidden border border-cream-200 shadow-sm">
            <div class="image-placeholder aspect-[16/10]">
              <div class="absolute inset-0 flex items-center justify-center">
                <svg class="w-10 h-10 text-forest-500/30" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M17 8h1a4 4 0 1 1 0 8h-1" />
                  <path d="M3 8h14v9a4 4 0 0 1-4 4H7a4 4 0 0 1-4-4Z" />
                </svg>
              </div>
            </div>
            <div class="p-6">
              <div class="flex items-center justify-between mb-2">
                <span class="tag-badge tag-community">{drink.tag}</span>
                <span class="text-forest-600 font-bold text-lg">${drink.price}</span>
              </div>
              <h3 class="font-display text-xl text-bark-900 mb-1">{drink.name}</h3>
              <p class="text-sm text-bark-500">{drink.description}</p>
            </div>
          </div>
        ))}
      </div>

      <div class="text-center mt-10 reveal">
        <a href="/menu" class="btn-outline px-8 py-3 rounded-full text-sm font-semibold inline-block">
          Full Menu &rarr;
        </a>
      </div>
    </div>
  </section>

  <div class="section-divider max-w-2xl mx-auto"></div>

  <!-- About Preview -->
  <section class="py-20 lg:py-28 bg-cream-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
        <div class="reveal">
          <div class="image-placeholder aspect-[4/3] rounded-2xl">
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center">
                <svg class="w-12 h-12 text-forest-500/30 mx-auto mb-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z"/>
                  <path d="M8 14s1.5 2 4 2 4-2 4-2"/>
                  <line x1="9" y1="9" x2="9.01" y2="9"/>
                  <line x1="15" y1="9" x2="15.01" y2="9"/>
                </svg>
                <p class="text-forest-400/50 text-xs">Team photo / roastery shot</p>
              </div>
            </div>
          </div>
        </div>
        <div class="reveal">
          <div class="ornament mb-4 justify-start">
            <span class="text-xs font-semibold tracking-[0.2em] uppercase text-forest-600">Our Story</span>
          </div>
          <h2 class="font-display text-3xl sm:text-4xl text-bark-900 mb-6">Started with a single espresso machine and a lot of nerve.</h2>
          <p class="text-bark-600 leading-relaxed mb-4">
            Groundwork started in 2019 in a 400-square-foot space on Main Street. Two friends, one shared conviction: Salt Lake City deserved better coffee.
          </p>
          <p class="text-bark-600 leading-relaxed mb-6">
            We source directly from small farms across Latin America, East Africa, and Southeast Asia. Every batch is roasted in our SLC roastery, and every cup is pulled by someone who actually cares.
          </p>
          <a href="/about" class="inline-flex items-center gap-2 text-forest-600 font-semibold text-sm hover:text-forest-700 transition-colors group">
            Read our full story
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Instagram Grid -->
  <section class="py-20 lg:py-28 bg-forest-900 overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12 reveal">
        <div class="ornament mb-4">
          <span class="text-xs font-semibold tracking-[0.2em] uppercase text-forest-300">@groundworkcoffeeslc</span>
        </div>
        <h2 class="font-display text-3xl sm:text-4xl text-cream-50 mb-4">From the 'gram</h2>
        <p class="text-cream-400 max-w-md mx-auto text-sm">Follow along for latte art, behind-the-scenes roasting, and the occasional dog on a patio.</p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3 sm:gap-4 stagger-children">
        {Array.from({ length: 8 }).map((_, i) => {
          const labels = [
            "Latte art", "Pour over", "Croissant detail", "Shop interior",
            "Cold brew tap", "Barista at work", "Patio vibes", "Bean close-up"
          ];
          return (
            <div class="reveal photo-grid-item rounded-xl aspect-square">
              <div class="photo-inner w-full h-full image-placeholder rounded-xl">
                <div class="absolute inset-0 flex items-center justify-center">
                  <div class="text-center">
                    <svg class="w-8 h-8 text-forest-500/30 mx-auto mb-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                      <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                      <circle cx="9" cy="9" r="2"/>
                      <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/>
                    </svg>
                    <p class="text-forest-400/40 text-[10px]">{labels[i]}</p>
                  </div>
                </div>
              </div>
              <div class="photo-overlay rounded-xl">
                <div class="flex items-center gap-3 text-cream-100">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                  </svg>
                  <span class="text-xs font-medium">{Math.floor(Math.random() * 200 + 50)}</span>
                </div>
              </div>
            </div>
          );
        })}
      </div>

      <div class="text-center mt-10 reveal">
        <a href="https://instagram.com" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-6 py-3 rounded-full border border-forest-600 text-cream-200 text-sm font-medium hover:bg-forest-800 transition-colors">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
          </svg>
          Follow @groundworkcoffeeslc
        </a>
      </div>
    </div>
  </section>

  <!-- Events Preview -->
  <section class="py-20 lg:py-28 bg-cream-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-14 reveal">
        <div class="ornament mb-4">
          <span class="text-xs font-semibold tracking-[0.2em] uppercase text-forest-600">What's Happening</span>
        </div>
        <h2 class="font-display text-3xl sm:text-4xl text-bark-900 mb-4">More than just coffee</h2>
        <p class="text-bark-500 max-w-md mx-auto">Tastings, throwdowns, open mics, and yoga. Something for everyone.</p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 stagger-children">
        {upcomingEvents.map((event) => (
          <div class="reveal card-hover bg-white rounded-2xl p-6 border border-cream-200 shadow-sm">
            <div class="flex items-start justify-between mb-4">
              <span class={`tag-badge tag-${event.tag.toLowerCase()}`}>{event.tag}</span>
              <span class="text-xs text-bark-400 font-medium">{event.location}</span>
            </div>
            <h3 class="font-display text-xl text-bark-900 mb-2">{event.title}</h3>
            <p class="text-sm text-bark-500 mb-4 leading-relaxed">{event.description}</p>
            <div class="flex items-center gap-4 text-sm text-bark-600">
              <span class="flex items-center gap-1.5">
                <svg class="w-4 h-4 text-forest-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                  <line x1="16" y1="2" x2="16" y2="6"/>
                  <line x1="8" y1="2" x2="8" y2="6"/>
                  <line x1="3" y1="10" x2="21" y2="10"/>
                </svg>
                {event.date}
              </span>
              <span class="flex items-center gap-1.5">
                <svg class="w-4 h-4 text-forest-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/>
                  <polyline points="12 6 12 12 16 14"/>
                </svg>
                {event.time}
              </span>
            </div>
          </div>
        ))}
      </div>

      <div class="text-center mt-10 reveal">
        <a href="/events" class="btn-outline px-8 py-3 rounded-full text-sm font-semibold inline-block">
          All Events &rarr;
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 lg:py-24 bg-forest-800 relative overflow-hidden">
    <div class="grain-overlay"></div>
    <div class="absolute top-0 right-0 w-96 h-96 rounded-full bg-forest-700/20 blur-3xl -translate-y-1/2 translate-x-1/3"></div>

    <div class="relative max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center reveal">
      <h2 class="font-display text-3xl sm:text-4xl lg:text-5xl text-cream-50 mb-6">Skip the line.<br/>Order ahead.</h2>
      <p class="text-cream-300 text-lg mb-8 max-w-lg mx-auto">
        Pick your drink, choose your location, and we'll have it ready when you walk in.
      </p>
      <a href="/order" class="btn-primary px-10 py-4 rounded-full text-sm font-semibold text-white inline-block">
        Start Your Order
      </a>
    </div>
  </section>

</Layout>
