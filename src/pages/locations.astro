---
import Layout from '../layouts/Layout.astro';
import locationsData from '../data/locations.json';
---

<Layout title="Locations" description="Find Groundwork Coffee Co. near you â€” three locations across Salt Lake City with hours and directions.">

  <!-- Hero -->
  <section class="relative pt-32 pb-16 lg:pt-40 lg:pb-20 bg-cream-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="ornament mb-4">
        <span class="text-xs font-semibold tracking-[0.2em] uppercase text-forest-600">Find Us</span>
      </div>
      <h1 class="font-display text-4xl sm:text-5xl lg:text-6xl text-bark-900 mb-4">Our Locations</h1>
      <p class="text-bark-500 max-w-lg mx-auto text-lg">
        Three spots across Salt Lake City. Each one a little different, all of them home.
      </p>
    </div>
  </section>

  <!-- Locations -->
  <section class="py-12 lg:py-20 bg-cream-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 space-y-20">
      {locationsData.locations.map((location, i) => (
        <div class={`reveal grid lg:grid-cols-2 gap-8 lg:gap-12 items-start ${i % 2 === 1 ? 'lg:direction-rtl' : ''}`}>
          <!-- Map / Image -->
          <div class={`${i % 2 === 1 ? 'lg:order-2' : ''}`}>
            <div class="map-placeholder aspect-[4/3] rounded-2xl relative">
              <div class="absolute inset-0 flex flex-col items-center justify-center text-center p-6">
                <svg class="w-10 h-10 text-bark-400/40 mb-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                  <circle cx="12" cy="10" r="3"/>
                </svg>
                <p class="text-bark-400/60 text-sm font-medium">{location.mapPlaceholder}</p>
                <p class="text-bark-400/40 text-xs mt-1">Google Maps embed goes here</p>
              </div>
            </div>
          </div>

          <!-- Details -->
          <div class={`${i % 2 === 1 ? 'lg:order-1' : ''}`}>
            <h2 class="font-display text-2xl sm:text-3xl text-bark-900 mb-3">{location.name}</h2>
            <p class="text-bark-500 leading-relaxed mb-6">{location.description}</p>

            <!-- Address & Contact -->
            <div class="space-y-3 mb-6">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-forest-500 mt-0.5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                  <circle cx="12" cy="10" r="3"/>
                </svg>
                <div>
                  <p class="text-sm font-medium text-bark-800">{location.address}</p>
                  <p class="text-sm text-bark-500">{location.city}</p>
                </div>
              </div>
              <a href={`tel:${location.phone.replace(/\D/g, '')}`} class="flex items-center gap-3 group">
                <svg class="w-5 h-5 text-forest-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                </svg>
                <span class="text-sm font-medium text-bark-800 group-hover:text-forest-600 transition-colors">{location.phone}</span>
              </a>
              <a href={`mailto:${location.email}`} class="flex items-center gap-3 group">
                <svg class="w-5 h-5 text-forest-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                  <polyline points="22,6 12,13 2,6"/>
                </svg>
                <span class="text-sm text-bark-800 group-hover:text-forest-600 transition-colors">{location.email}</span>
              </a>
            </div>

            <!-- Hours -->
            <div class="bg-white rounded-xl border border-cream-200 p-5 mb-6">
              <h3 class="font-semibold text-bark-900 text-sm uppercase tracking-wider mb-3">Hours</h3>
              <div class="space-y-0">
                <div class="hours-row flex justify-between text-sm">
                  <span class="text-bark-600">Monday - Friday</span>
                  <span class="font-medium text-bark-800">{location.hours.weekdays}</span>
                </div>
                <div class="hours-row flex justify-between text-sm">
                  <span class="text-bark-600">Saturday</span>
                  <span class="font-medium text-bark-800">{location.hours.saturday}</span>
                </div>
                <div class="hours-row flex justify-between text-sm">
                  <span class="text-bark-600">Sunday</span>
                  <span class="font-medium text-bark-800">{location.hours.sunday}</span>
                </div>
              </div>
            </div>

            <!-- Features -->
            <div class="flex flex-wrap gap-2">
              {location.features.map((feature) => (
                <span class="feature-badge">
                  <svg class="w-3 h-3 text-forest-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                    <polyline points="20 6 9 17 4 12"/>
                  </svg>
                  {feature}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 bg-forest-800 relative overflow-hidden">
    <div class="grain-overlay"></div>
    <div class="relative max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-2xl sm:text-3xl text-cream-50 mb-4">Coming to visit?</h2>
      <p class="text-cream-300 mb-8">Order ahead and skip straight to the good part.</p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/order" class="btn-primary px-8 py-3.5 rounded-full text-sm font-semibold text-white">
          Order Online
        </a>
        <a href="/menu" class="px-8 py-3.5 rounded-full text-sm font-semibold text-cream-200 border border-cream-200/25 hover:border-cream-200/50 hover:bg-cream-200/5 transition-all">
          See the Menu
        </a>
      </div>
    </div>
  </section>

</Layout>
