---
import Layout from '../layouts/Layout.astro';
import locationsData from '../data/locations.json';
---

<Layout title="Order Online" description="Order ahead from Groundwork Coffee Co. â€” pick your drink, choose your location, skip the line.">

  <!-- Hero -->
  <section class="relative pt-32 pb-16 lg:pt-40 lg:pb-20 bg-cream-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="ornament mb-4">
        <span class="text-xs font-semibold tracking-[0.2em] uppercase text-forest-600">Skip the Line</span>
      </div>
      <h1 class="font-display text-4xl sm:text-5xl lg:text-6xl text-bark-900 mb-4">Order Online</h1>
      <p class="text-bark-500 max-w-lg mx-auto text-lg">
        Pick your drink, choose your pickup location, and we'll have it ready when you arrive.
      </p>
    </div>
  </section>

  <!-- Order Platform CTA -->
  <section class="py-12 lg:py-20 bg-cream-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">

      <!-- Integration placeholder -->
      <div class="reveal bg-white rounded-2xl border border-cream-200 shadow-sm p-8 lg:p-12 text-center mb-12">
        <div class="w-16 h-16 rounded-2xl bg-forest-50 flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-forest-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="9" cy="21" r="1"/>
            <circle cx="20" cy="21" r="1"/>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
          </svg>
        </div>
        <h2 class="font-display text-2xl sm:text-3xl text-bark-900 mb-4">Online ordering coming soon</h2>
        <p class="text-bark-500 max-w-md mx-auto mb-8 leading-relaxed">
          We're setting up our online ordering system. In the meantime, you can call ahead to any location and we'll have your order ready.
        </p>

        <!-- Platform badges (placeholder for Square/Toast/etc integration) -->
        <div class="flex flex-wrap justify-center gap-4 mb-8">
          <div class="px-6 py-3 rounded-xl bg-cream-100 border border-cream-200 text-bark-500 text-sm font-medium">
            Square Online
          </div>
          <div class="px-6 py-3 rounded-xl bg-cream-100 border border-cream-200 text-bark-500 text-sm font-medium">
            DoorDash
          </div>
          <div class="px-6 py-3 rounded-xl bg-cream-100 border border-cream-200 text-bark-500 text-sm font-medium">
            Uber Eats
          </div>
        </div>

        <p class="text-xs text-bark-400">Integration with your preferred ordering platform goes here.</p>
      </div>

      <!-- Quick call-ahead -->
      <div class="reveal">
        <h3 class="font-display text-xl text-bark-900 text-center mb-6">Or call ahead</h3>
        <div class="grid sm:grid-cols-3 gap-4">
          {locationsData.locations.map((location) => (
            <a
              href={`tel:${location.phone.replace(/\D/g, '')}`}
              class="card-hover bg-white rounded-xl border border-cream-200 shadow-sm p-5 text-center hover:border-forest-300 transition-colors group"
            >
              <h4 class="font-semibold text-bark-900 mb-1 group-hover:text-forest-700 transition-colors">{location.name}</h4>
              <p class="text-sm text-bark-500 mb-3">{location.address}</p>
              <span class="inline-flex items-center gap-1.5 text-forest-600 font-medium text-sm">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                </svg>
                {location.phone}
              </span>
            </a>
          ))}
        </div>
      </div>

      <!-- Gift cards teaser -->
      <div class="reveal mt-16 bg-forest-50 rounded-2xl border border-forest-100 p-8 text-center">
        <div class="flex items-center justify-center gap-3 mb-4">
          <svg class="w-6 h-6 text-forest-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="8" width="18" height="12" rx="2" ry="2"/>
            <path d="M12 8V4"/>
            <path d="M7.5 4C7.5 4 9 6 12 6s4.5-2 4.5-2"/>
            <line x1="3" y1="14" x2="21" y2="14"/>
          </svg>
          <h3 class="font-display text-xl text-bark-900">Gift Cards</h3>
        </div>
        <p class="text-sm text-bark-500 mb-4">
          Give the gift of good coffee. Digital and physical gift cards available at any location.
        </p>
        <a href="/locations" class="text-forest-600 font-semibold text-sm hover:text-forest-700 transition-colors inline-flex items-center gap-1">
          Visit a location to purchase
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

</Layout>
