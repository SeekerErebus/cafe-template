---
import Layout from '../layouts/Layout.astro';
import eventsData from '../data/events.json';
---

<Layout title="Events" description="Latte art throwdowns, cupping sessions, open mics, and more at Groundwork Coffee Co.">

  <!-- Hero -->
  <section class="relative pt-32 pb-16 lg:pt-40 lg:pb-20 bg-cream-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="ornament mb-4">
        <span class="text-xs font-semibold tracking-[0.2em] uppercase text-forest-600">Happenings</span>
      </div>
      <h1 class="font-display text-4xl sm:text-5xl lg:text-6xl text-bark-900 mb-4">Events</h1>
      <p class="text-bark-500 max-w-lg mx-auto text-lg">
        More than a coffee shop. Classes, music, community, and the occasional latte art battle.
      </p>
    </div>
  </section>

  <!-- Events Grid -->
  <section class="py-12 lg:py-20 bg-cream-50">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid sm:grid-cols-2 gap-6 lg:gap-8 stagger-children">
        {eventsData.events.map((event) => (
          <div class="reveal card-hover bg-white rounded-2xl overflow-hidden border border-cream-200 shadow-sm">
            <!-- Event image placeholder -->
            <div class="image-placeholder aspect-[16/9] relative">
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="text-center">
                  <svg class="w-10 h-10 text-forest-500/30 mx-auto mb-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                    <line x1="16" y1="2" x2="16" y2="6"/>
                    <line x1="8" y1="2" x2="8" y2="6"/>
                    <line x1="3" y1="10" x2="21" y2="10"/>
                  </svg>
                  <p class="text-forest-400/40 text-xs">Event photo</p>
                </div>
              </div>
            </div>

            <div class="p-6">
              <div class="flex items-center justify-between mb-3">
                <span class={`tag-badge tag-${event.tag.toLowerCase()}`}>{event.tag}</span>
                <span class="text-xs text-bark-400 font-medium">{event.location}</span>
              </div>

              <h3 class="font-display text-xl text-bark-900 mb-2">{event.title}</h3>
              <p class="text-sm text-bark-500 leading-relaxed mb-4">{event.description}</p>

              <div class="flex items-center gap-4 text-sm text-bark-600 pt-4 border-t border-cream-100">
                <span class="flex items-center gap-1.5">
                  <svg class="w-4 h-4 text-forest-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                    <line x1="16" y1="2" x2="16" y2="6"/>
                    <line x1="8" y1="2" x2="8" y2="6"/>
                    <line x1="3" y1="10" x2="21" y2="10"/>
                  </svg>
                  {event.date}
                </span>
                <span class="flex items-center gap-1.5">
                  <svg class="w-4 h-4 text-forest-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <polyline points="12 6 12 12 16 14"/>
                  </svg>
                  {event.time}
                </span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Private Events CTA -->
  <section class="py-20 bg-cream-100">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="reveal bg-white rounded-2xl p-8 lg:p-12 border border-cream-200 shadow-sm">
        <div class="grid lg:grid-cols-2 gap-8 items-center">
          <div>
            <h2 class="font-display text-2xl sm:text-3xl text-bark-900 mb-4">Host your event with us</h2>
            <p class="text-bark-500 leading-relaxed mb-6">
              Book our Downtown space for private events, team offsites, birthday parties, or anything else. We'll handle the coffee (and the ambiance).
            </p>
            <ul class="space-y-2 text-sm text-bark-600">
              <li class="flex items-center gap-2">
                <svg class="w-4 h-4 text-forest-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                  <polyline points="20 6 9 17 4 12"/>
                </svg>
                Up to 50 guests
              </li>
              <li class="flex items-center gap-2">
                <svg class="w-4 h-4 text-forest-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                  <polyline points="20 6 9 17 4 12"/>
                </svg>
                Custom drink menus available
              </li>
              <li class="flex items-center gap-2">
                <svg class="w-4 h-4 text-forest-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                  <polyline points="20 6 9 17 4 12"/>
                </svg>
                Catering add-ons from our kitchen
              </li>
              <li class="flex items-center gap-2">
                <svg class="w-4 h-4 text-forest-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                  <polyline points="20 6 9 17 4 12"/>
                </svg>
                AV setup for presentations
              </li>
            </ul>
          </div>
          <div class="text-center lg:text-right">
            <a href="mailto:events@groundworkcoffee.com" class="btn-primary px-8 py-3.5 rounded-full text-sm font-semibold text-white inline-block">
              Inquire About Private Events
            </a>
            <p class="text-xs text-bark-400 mt-3">events@groundworkcoffee.com</p>
          </div>
        </div>
      </div>
    </div>
  </section>

</Layout>
