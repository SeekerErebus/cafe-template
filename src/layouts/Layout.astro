---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Groundwork Coffee Co. â€” Specialty coffee, baked goods, and community in Salt Lake City." } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title} | Groundwork Coffee Co.</title>
  </head>
  <body class="bg-cream-50 text-bark-900 font-sans">
    <!-- Navigation -->
    <nav id="main-nav" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-18 sm:h-20">
          <!-- Logo -->
          <a href="/" class="flex items-center gap-2 group">
            <div class="w-9 h-9 rounded-full bg-forest-600 flex items-center justify-center transition-transform duration-300 group-hover:scale-110">
              <svg class="w-5 h-5 text-cream-50" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M17 8h1a4 4 0 1 1 0 8h-1" />
                <path d="M3 8h14v9a4 4 0 0 1-4 4H7a4 4 0 0 1-4-4Z" />
                <line x1="6" y1="2" x2="6" y2="4" />
                <line x1="10" y1="2" x2="10" y2="4" />
                <line x1="14" y1="2" x2="14" y2="4" />
              </svg>
            </div>
            <div class="flex flex-col leading-tight">
              <span class="nav-logo-name text-lg font-display tracking-tight">Groundwork</span>
              <span class="nav-logo-sub text-[10px] font-semibold tracking-[0.2em] uppercase -mt-0.5">Coffee Co.</span>
            </div>
          </a>

          <!-- Desktop Nav -->
          <div class="hidden md:flex items-center gap-8">
            <a href="/" class={`nav-link text-sm font-medium ${currentPath === '/' ? 'nav-link-active' : ''}`}>Home</a>
            <a href="/menu" class={`nav-link text-sm font-medium ${currentPath === '/menu' ? 'nav-link-active' : ''}`}>Menu</a>
            <a href="/locations" class={`nav-link text-sm font-medium ${currentPath === '/locations' ? 'nav-link-active' : ''}`}>Locations</a>
            <a href="/events" class={`nav-link text-sm font-medium ${currentPath === '/events' ? 'nav-link-active' : ''}`}>Events</a>
            <a href="/about" class={`nav-link text-sm font-medium ${currentPath === '/about' ? 'nav-link-active' : ''}`}>About</a>
            <a href="/order" class="btn-primary px-5 py-2.5 rounded-full text-sm font-semibold text-white">
              Order Online
            </a>
          </div>

          <!-- Mobile menu button -->
          <button id="mobile-menu-btn" class="nav-mobile-btn md:hidden p-2 rounded-lg hover:bg-cream-100/20 transition-colors" aria-label="Toggle menu">
            <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>

        <!-- Mobile menu -->
        <div id="mobile-menu" class="mobile-menu md:hidden">
          <div class="py-4 space-y-1 border-t border-cream-200">
            <a href="/" class="block px-4 py-3 rounded-lg text-sm font-medium text-bark-700 hover:bg-cream-100 hover:text-forest-700 transition-colors">Home</a>
            <a href="/menu" class="block px-4 py-3 rounded-lg text-sm font-medium text-bark-700 hover:bg-cream-100 hover:text-forest-700 transition-colors">Menu</a>
            <a href="/locations" class="block px-4 py-3 rounded-lg text-sm font-medium text-bark-700 hover:bg-cream-100 hover:text-forest-700 transition-colors">Locations</a>
            <a href="/events" class="block px-4 py-3 rounded-lg text-sm font-medium text-bark-700 hover:bg-cream-100 hover:text-forest-700 transition-colors">Events</a>
            <a href="/about" class="block px-4 py-3 rounded-lg text-sm font-medium text-bark-700 hover:bg-cream-100 hover:text-forest-700 transition-colors">About</a>
            <div class="pt-2 px-4">
              <a href="/order" class="btn-primary block text-center px-5 py-3 rounded-full text-sm font-semibold text-white">Order Online</a>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-forest-900 text-cream-300">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-20">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8">
          <!-- Brand -->
          <div class="lg:col-span-1">
            <div class="flex items-center gap-2 mb-4">
              <div class="w-8 h-8 rounded-full bg-forest-600 flex items-center justify-center">
                <svg class="w-4 h-4 text-cream-50" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M17 8h1a4 4 0 1 1 0 8h-1" />
                  <path d="M3 8h14v9a4 4 0 0 1-4 4H7a4 4 0 0 1-4-4Z" />
                  <line x1="6" y1="2" x2="6" y2="4" />
                  <line x1="10" y1="2" x2="10" y2="4" />
                  <line x1="14" y1="2" x2="14" y2="4" />
                </svg>
              </div>
              <span class="font-display text-lg text-cream-100">Groundwork</span>
            </div>
            <p class="text-sm text-cream-400 leading-relaxed mb-6">
              Specialty coffee roasted with intention, served with care. Three locations across Salt Lake City.
            </p>
            <div class="flex gap-4">
              <!-- Instagram -->
              <a href="#" class="w-9 h-9 rounded-full bg-forest-800 flex items-center justify-center text-cream-400 hover:bg-forest-700 hover:text-cream-100 transition-colors" aria-label="Instagram">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
                </svg>
              </a>
              <!-- TikTok -->
              <a href="#" class="w-9 h-9 rounded-full bg-forest-800 flex items-center justify-center text-cream-400 hover:bg-forest-700 hover:text-cream-100 transition-colors" aria-label="TikTok">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-2.88 2.5 2.89 2.89 0 01-2.89-2.89 2.89 2.89 0 012.89-2.89c.28 0 .54.04.79.1v-3.5a6.37 6.37 0 00-.79-.05A6.34 6.34 0 003.15 15.2a6.34 6.34 0 0010.86 4.48v-7.13a8.16 8.16 0 005.58 2.2V11.3a4.85 4.85 0 01-3.58-1.61v-3z"/>
                </svg>
              </a>
              <!-- Twitter/X -->
              <a href="#" class="w-9 h-9 rounded-full bg-forest-800 flex items-center justify-center text-cream-400 hover:bg-forest-700 hover:text-cream-100 transition-colors" aria-label="Twitter">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
            </div>
          </div>

          <!-- Quick Links -->
          <div>
            <h3 class="font-semibold text-cream-100 text-sm uppercase tracking-wider mb-4">Visit</h3>
            <ul class="space-y-3">
              <li><a href="/menu" class="footer-link text-sm text-cream-400">Menu</a></li>
              <li><a href="/locations" class="footer-link text-sm text-cream-400">Locations & Hours</a></li>
              <li><a href="/events" class="footer-link text-sm text-cream-400">Events</a></li>
              <li><a href="/order" class="footer-link text-sm text-cream-400">Order Online</a></li>
              <li><a href="/about" class="footer-link text-sm text-cream-400">Our Story</a></li>
            </ul>
          </div>

          <!-- Locations -->
          <div>
            <h3 class="font-semibold text-cream-100 text-sm uppercase tracking-wider mb-4">Locations</h3>
            <ul class="space-y-4">
              <li>
                <p class="text-sm font-medium text-cream-200">Downtown</p>
                <p class="text-sm text-cream-500">247 S Main St, SLC</p>
              </li>
              <li>
                <p class="text-sm font-medium text-cream-200">Sugar House</p>
                <p class="text-sm text-cream-500">1045 E 2100 S, SLC</p>
              </li>
              <li>
                <p class="text-sm font-medium text-cream-200">9th & 9th</p>
                <p class="text-sm text-cream-500">902 E 900 S, SLC</p>
              </li>
            </ul>
          </div>

          <!-- Newsletter -->
          <div>
            <h3 class="font-semibold text-cream-100 text-sm uppercase tracking-wider mb-4">Stay in the loop</h3>
            <p class="text-sm text-cream-400 mb-4">New beans, events, and the occasional free drink. No spam.</p>
            <form class="flex gap-2" action="https://formspree.io/f/YOUR_FORM_ID" method="POST">
              <input
                type="email"
                name="email"
                placeholder="your@email.com"
                class="flex-1 px-4 py-2.5 rounded-full bg-forest-800 border border-forest-700 text-cream-100 text-sm placeholder:text-cream-600 focus:border-forest-500 focus:outline-none transition-colors"
                required
              />
              <button type="submit" class="px-5 py-2.5 rounded-full bg-forest-600 text-cream-50 text-sm font-medium hover:bg-forest-500 transition-colors">
                Join
              </button>
            </form>
          </div>
        </div>

        <div class="border-t border-forest-800 mt-12 pt-8 flex flex-col sm:flex-row items-center justify-between gap-4">
          <p class="text-xs text-cream-600">&copy; 2026 Groundwork Coffee Co. All rights reserved.</p>
          <div class="flex gap-6">
            <a href="#" class="text-xs text-cream-600 hover:text-cream-400 transition-colors">Privacy</a>
            <a href="#" class="text-xs text-cream-600 hover:text-cream-400 transition-colors">Terms</a>
            <a href="#" class="text-xs text-cream-600 hover:text-cream-400 transition-colors">Accessibility</a>
          </div>
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu toggle
      const menuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');
      menuBtn?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('open');
      });

      // Scroll-aware nav
      const nav = document.getElementById('main-nav');
      let lastScrollY = 0;
      window.addEventListener('scroll', () => {
        const scrollY = window.scrollY;
        if (scrollY > 60) {
          nav?.classList.add('nav-scrolled');
        } else {
          nav?.classList.remove('nav-scrolled');
        }
        lastScrollY = scrollY;
      });

      // Intersection Observer for reveal animations
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add('visible');
              observer.unobserve(entry.target);
            }
          });
        },
        { threshold: 0.1, rootMargin: '0px 0px -40px 0px' }
      );

      document.querySelectorAll('.reveal').forEach((el) => observer.observe(el));
    </script>
  </body>
</html>
